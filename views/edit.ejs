<% include ./partials/header %>

<div class="container" style="width:30%">

            <h3> Edit <%= campground.name %> </h3>

            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="camp[name]" value="<%=campground.name%>">
                </div>
                   
                <div class="form-group">
                     <input class="form-control" type="text" name="camp[image]" value="<%=campground.image%>">
                </div>

                <div class="form-group">
                    <textarea class="form-control" name="camp[description]"><%=campground.description%></textarea>
                </div>
                   
                <div class="form-group">
                     <button class="btn btn-primary btn-block">Submit</button>
                </div>
                   
            </form>

        <a href="/campgrounds">Back</a>

</div>

<% include ./partials/footer %>