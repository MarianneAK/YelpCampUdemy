<% include ./partials/header %>

<div class="container">
 
  <header class="jumbotron">
      <h1> This is the campgrounds page! </h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <a href="/campgrounds/new" class="btn btn-primary">Add New Camground</a>
  </header>
 
  
  <div class="row" style="display:flex; flex-wrap: wrap;">
     
    <% campgrounds.forEach((campground) => { %>

        <div class="col-md-3 col-sm-6">
         
          
            <div class="img-thumbnail"> 
              <img class="img-fluid" style="margin-bottom:15px" src="<%= campground.image %>">
              <div class="caption text-center"> <h5><%= campground.name %></h5> </div>
              <p style="text-align:center">
                  <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
           
          
        </div>
    
      <% }); %>
    
  </div>
 
</div>

<% include ./partials/footer %>