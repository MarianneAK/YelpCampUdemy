<% include ./partials/header %>

<div class="container">

    <div class="row">

            <div class="col-md-3">

                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item ">Info 2</li>
                    <li class="list-group-item ">Info 3</li>
                </div>

            </div>

            <div class="col-md-9">

             

                        <div class="img-thumbnail">
                                <img style="width:400px; height:300px;" class="img-fluid mx-auto d-block" src="<%= campground.image  %>">
                                <div class="caption">

                                        <a  href=""><%= campground.name %></a>
                                        <h4 class="float-right">$9.00/night</h4>
                                        <p><%= campground.description %></p>
                                        <em><p>Submitted by <%= campground.author.username %></p></em>

                                     <% if( currentUser && campground.author.id.equals(currentUser._id) ) { %>
                                       
                                        <div class="row" style="padding:10px">

                                                        <a style="margin-right:10px" class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>

                                                        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                                                <button class="btn btn-danger">DELETE</button>
                                                        </form>

                                        </div>

                                     <% } %>
                                </div>
                                
                        </div>

              
                       
                        
                       

                        <div style="background-color: beige; padding:20px; margin-top:20px">

                                <p class="float-right">
                                        <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                                      </p>
                                            <br><br><br><br>
                                            <% campground.comments.forEach( function(comment){ %>
                                            
                                                <p>
                                                 <strong class="float-left"><%=comment.author.username%></strong> 
                                                 <span class="float-right">10 days ago</span>
                                                 <br>
                                                 
                                                        <%=comment.text%>
                                                 
                                                </p>
                                            
                                            <% }) %>
      

                        </div>
                            
                        
            </div>
            

    </div>
   
    

</div>

<% include ./partials/footer %>